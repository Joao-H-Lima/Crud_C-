@model IEnumerable<ProjetoSimpliss.Models.Beneficios>

@{
    ViewData["Title"] = "Benefícios";
}

<div class="container">
    <h1 class="mt-4 text-center">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between align-items-center my-4">
        <p class="lead">Gerencie os benefícios cadastrados no sistema.</p>
        <a asp-action="Create" class="btn btn-success btn-sm">Adicionar Novo Benefício</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.NomeBeneficio)</th>
                <th>@Html.DisplayNameFor(model => model.PorcentagemDesconto)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NomeBeneficio)</td>
                    <td>@Html.DisplayFor(modelItem => item.PorcentagemDesconto)%</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
