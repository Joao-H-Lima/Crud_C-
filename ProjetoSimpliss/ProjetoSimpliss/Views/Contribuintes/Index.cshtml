@model IEnumerable<ProjetoSimpliss.viewModels.ContribuinteShowModel>

@{
    ViewData["Title"] = "Contribuintes";
}

<div class="container">
    <h1 class="mt-4 text-center">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between align-items-center my-4">
        <p class="lead">Gerencie os contribuintes cadastrados no sistema.</p>
        <a asp-action="CreateWithBeneficios" class="btn btn-success btn-sm">Adicionar Novo Contribuinte</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.CNPJ)</th>
                <th>@Html.DisplayNameFor(model => model.RazaoSocial)</th>
                <th>@Html.DisplayNameFor(model => model.DataAbertura)</th>
                <th>@Html.DisplayNameFor(model => model.RegimeTributacao)</th>
                <th>@Html.DisplayNameFor(model => model.nomeBeneficio)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CNPJ)</td>
                    <td>@Html.DisplayFor(modelItem => item.RazaoSocial)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataAbertura)</td>
                    <td>@Html.DisplayFor(modelItem => item.RegimeTributacao)</td>
                    <td>@Html.DisplayFor(modelItem => item.nomeBeneficio)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
